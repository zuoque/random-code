{
  "compilerOptions": {
    "baseUrl": "./",
    "incremental": true,
    "tsBuildInfoFile": "./buildFile",
    "target": "ES2016",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,


    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "esModuleInterop": true,
  },
  "include": ["src"],
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "files": true,
  }
}
